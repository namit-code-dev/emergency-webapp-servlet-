FROM tomcat:9.0-jdk17-temurin

# Working directory in container
WORKDIR /usr/local/tomcat

# Remove default apps
RUN rm -rf webapps/*

# Copy your actual webapp folder
COPY ./src/main/webapp/ ./webapps/ROOT/

# Copy compiled classes (from your build output)
COPY ./build/classes/myapp/ ./webapps/ROOT/WEB-INF/classes/myapp/

# Expose port
EXPOSE 8080

# Start Tomcat
CMD ["catalina.sh", "run"]
